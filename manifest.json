{
    "manifest_version": 3,
    "name": "動画速度コントローラー",
    "version": "2.1",
    "description": "軽量動画速度・シークコントローラー",
    "permissions": [
        "activeTab",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_title": "動画速度コントローラー",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "settings.json"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "128": "icon.png"
    }
}